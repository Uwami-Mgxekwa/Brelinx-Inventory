{
  "name": "brelinx-inventory",
  "version": "1.0.0",
  "description": "Inventory Management System by Brelinx",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac", 
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "inventory",
    "management",
    "electron",
    "brelinx"
  ],
  "author": "Brelinx.com",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.brelinx.inventory",
    "productName": "Brelinx Inventory Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/database/",
        "to": "database/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "src/renderer/assets/logo.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Brelinx Inventory"
    },
    "portable": {
      "artifactName": "Brelinx-Inventory-Portable.exe"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/renderer/assets/logo.png",
      "category": "Office"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/assets/logo.png",
      "category": "public.app-category.business"
    }
  }
}